{
    "name": "slashworks/contao-social-media-bundle",
    "type": "contao-bundle",
    "description": "Social media bundle for contao 4",
    "homepage": "https://contao.org",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Stefan Gruna",
            "homepage": "https://github.com/sgruna"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "contao/core-bundle": "^4.4",
        "symfony/config": "^4.4 || ^5.1",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "symfony/http-kernel": "^4.4 || ^5.1"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^2.0",
        "phpunit/phpunit": "^8.4",
        "symfony/phpunit-bridge": "^4.4 || ^5.1"
    },
    "extra": {
        "contao-manager-plugin": "Slashworks\\ContaoSocialMediaBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Slashworks\\ContaoSocialMediaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slashworks\\ContaoSocialMediaBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/slashworks/contao-social-media-bundle/issues",
        "source": "https://github.com/slashworks/contao-social-media-bundle"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ tests/ --fix --ansi"
        ]
    }
}
